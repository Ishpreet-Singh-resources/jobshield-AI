{
  "manifest_version": 3,
  "name": "JobShield - Fraud Job Detector",
  "version": "1.0",
  "description": "Detects scam job emails and fraud alerts",
  "permissions": ["activeTab"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
